	<definition>
		<key>language_selection</key>
		<value><![CDATA[<div class="info alert alert-info">
		<i class="fa fa-language fa-fw"></i> Wählen Sie zusätzliche Sprachen aus.
</div>
<div class="row">
		<div class="col-sm-12 h5 center">
				%s
		</div>
</div>]]></value>
	</definition>
	<definition>
		<key>more_extensions</key>
